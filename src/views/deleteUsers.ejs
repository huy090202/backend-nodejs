<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete A User</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <!-- check xem da lay dc du lieu chua -->
    <!-- <%= JSON.stringify(userDelete)%> -->
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/createUsers">Create Users</a>
    </div>
    <div class="form-add-new">
      <form action="/delete-user" method="post">
        <fieldset>
          <legend>Delete a user</legend>
          <div class="input-group d-none">
            <label for="">Id: </label>
            <input type="text" name="userId" value="<%= userDelete.id%>" />
          </div>
          <div class="input-group">
            <label for="">
              Are you sure you want to delete this user with Email:
            </label>
            <input type="text" name="email" value="<%= userDelete.email%>" />
          </div>
          <div>
            <button>Confirm</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
